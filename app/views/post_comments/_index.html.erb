<table>
  <% posts.post_comment.reverse.each do |post| %>
    <tr>
      <td class="post-comment">
        <%= link_to user_path(post.user), data: {"turbolinks" => false} do %>
          <%= attachment_image_tag post.user, :image, fallback: "no_image.jpg", format: 'jpeg', size:'40x40', class: "profile-image" %>
          <%= post.user.name %>
        <% end %>
        <div class="word">
          <%= simple_format post.comment %>
        </div>
        <%#= attachment_image_tag post, :image, format: 'jpeg', size:'200x200' %>
      </td>
    </tr>
  <% end %>
</table>
