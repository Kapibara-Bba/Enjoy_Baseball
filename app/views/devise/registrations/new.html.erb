<div class="container mt-5">
  <div class="row devise-form">
    <div class="mx-auto">
      <p class="sign-up">Sign Up</p>
      <p class="sub-sign-up">新規登録</p>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <% flash.each do |message_type, messages| %>
          <% messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="sign">
          <div class="field">
            <%= f.label :名前 %><br />
            <%= f.text_field :name, autofocus: true %>
          </div>
          <div class="field">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class="field">
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %>文字以上の半角英数字)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
          <div class="field">
            <%= f.label :パスワード確認 %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
          <div class="actions">
            <%= f.submit "登録してチーム選択へ", class: "btn btn-info col-xs-12" %>
          </div>
        </div>
      <% end %>
      <div class="sign_up-link">
        <%= link_to "ログインの方", new_user_session_path, data: {"turbolinks" => false} %>
      </div>
    </div>
  </div>
</div>

