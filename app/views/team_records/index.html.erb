<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h2>試合結果一覧</h2>
      </div>
    </div>
    <div class="game-index">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>日にち</th>
            <th>対戦チーム</th>
            <th>スコア</th>
            <th>勝敗</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @team_records.each do |record| %>
            <tr>
              <td><%= record.days %></td>
              <td><%= record.opponent %></td>
              <td><%= record.team_score %> ー <%= record.rival_score %></td>
              <td><%= record.result %></td>
              <td>
                <div class="show-btn">
                  <%= link_to "詳細", team_record_path(record), class: 'btn btn-success' %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
