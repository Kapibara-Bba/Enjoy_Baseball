<div class="body">
  <div class="container mt-5 flame">
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <p>名前を記入してください</p>
      </div>
    <% end %>
    <%= form_with model: @user, url: user_path, method: :patch, local: true do |f| %>
    　<div class="col-xs-4">
        <div class="field">
          <%= attachment_image_tag @user, :image, fallback: 'no_image.jpg', format: 'jpeg', size:'150x150', onChange: "$('.img_field').change()", class: 'center-block img_prev profile-image'%>
          <%= f.attachment_field :image, class: 'img_field' %>
        </div>
   　  </div>
      <div class="col-xs-7">
        <div class="field user">
          <%= f.label :名前, class:"col-sm-3" %>
          <%= f.text_field :name, class: "col-sm-5" %>
        </div>
        <div class="field user">
          <%= f.label :投打, class:"col-sm-3" %>
          <%= f.select :throw, User.throws.keys.to_a, {prompt: "-- 選択してください --"}, {class: "col-sm-5"} %>
        </div>
        <div class="field user">
          <%= f.label :ポジション, class:"col-sm-3" %>
          <%= f.select :position, User.positions.keys, {prompt: "-- 選択してください --"}, {class: "col-sm-5"} %>
        </div>
        <div class="actions text-right">
            <%= f.submit "変更を保存", class: "btn btn-primary active" %>
            <%= link_to "戻る", user_path(@user), data: {"turbolinks" => false}, class: "col-xs-12 btn btn-secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
