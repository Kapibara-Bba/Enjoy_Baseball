<div class="body">
  <div class="container mt-5 flame">
    <div class="flash">
      <%= flash[:notice] %>
    </div>
    <div class="user-show-profile">
      <%= attachment_image_tag @user, :image, fallback: "no_image.jpg", format: 'jpeg', size:'200x200', class: 'profile-image' %><br>
      <span class="user-name"><%= @user.name %></span><br>
      <%= link_to team_path(@user.team), data: {"turbolinks" => false} do %>
        <p class="profile-font"><%= @user.team.teamname %></p>
      <% end %>
      <p class="profile-font"><%= @user.throw %> <%= @user.position %>
      <% if @user == current_user %>
        <%= link_to "プロフィール編集", edit_user_path(current_user), data: {"turbolinks" => false}, class: "col-xs-12 btn btn-success" %>
      <% end %></p>
    </div>
    <div class="user-record">
    <!--打撃成績の表示-->
      <h2>打撃成績</h2>
      <div class="row">
        <div style="height:100%; width:100%; overflow-y:scroll; scrollbar-base-color:#99ff66 ; scrollbar-arrow-color:#ff0000;">
          <table class="table table-hover table-inverse" width="100%" style="table-layout: auto; background-color: #FFFFCC">
            <thead>
              <tr align="center">
                <th><span class="nowrap">打率</span></th>
                <th><span class="nowrap">打席</span></th>
                <th><span class="nowrap">打数</span></th>
                <th><span class="nowrap">安打</span></th>
                <th><span class="nowrap">本塁打</span></th>
                <th><span class="nowrap">二塁打</span></th>
                <th><span class="nowrap">三塁打</span></th>
                <th><span class="nowrap">打点</span></th>
                <th><span class="nowrap">得点</span></th>
                <th><span class="nowrap">三振</span></th>
                <th><span class="nowrap">四死球</span></th>
                <th><span class="nowrap">犠打</span></th>
                <th><span class="nowrap">犠飛</span></th>
                <th><span class="nowrap">出塁率</span></th>
                <th><span class="nowrap">盗塁</span></th>
                <th><span class="nowrap">失策</span></th>
              </tr>
            </thead>
            <tbody>
              <tr align="center">
                <td>
                  <% begin %>
                    <% average = @user_record.all.sum(:hit)/@user_record.all.sum(:batting).to_f %>
                    <span class="nowrap"><%= sprintf("%.3f",average) %></span>
                  <% rescue %>
                    0
                  <% end %>
                </td>
                <td><span class="nowrap"><%= @user_record.all.sum(:bat) %></span></td>
                <td><span class="nowrap"><%= @user_record.all.sum(:batting) %></span></td>
                <td><span class="nowrap"><%= @user_record.all.sum(:hit) %></span></td>
                <td><span class="nowrap"><%= @user_record.all.sum(:homerun) %></span></td>
                <td><span class="nowrap"><%= @user_record.all.sum(:two_base_hit) %></span></td>
                <td><span class="nowrap"><%= @user_record.all.sum(:three_base_hit) %></span></td>
                <td><span class="nowrap"><%= @user_record.all.sum(:dot) %></span></td>
                <td><span class="nowrap"><%= @user_record.all.sum(:homein) %></span></td>
                <td><span class="nowrap"><%= @user_record.all.sum(:strike_out) %></span></td>
                <td><span class="nowrap"><%= @user_record.all.sum(:ball) %></span></td>
                <td><span class="nowrap"><%= @user_record.all.sum(:bunt) %></span></td>
                <td><span class="nowrap"><%= @user_record.all.sum(:sacrifice_fly) %></span></td>
                <td>
                  <% begin %>
                    <% base = @user_record.all.sum(:hit)/@user_record.all.sum(:batting).to_f %>
                    <span class="nowrap"><%= sprintf("%.3f",base) %></span>
                  <% rescue %>
                    0
                  <% end %>
                </td>
                <td><span class="nowrap"><%= @user_record.all.sum(:still) %></span></td>
                <td><span class="nowrap"><%= @user_record.all.sum(:error) %></span></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="user-record">
    <!--投手成績の表示-->
      <h2>投手成績</h2>
      <div class="row">
        <div style="height:100%; width:100%; overflow-y:scroll; scrollbar-base-color:#99ff66 ; scrollbar-arrow-color:#ff0000;">
          <table class="table table-hover table-inverse" width="100%" style="table-layout: auto; background-color: #FFDDFF;">
            <thead>
              <tr align="center">
                <th><span class="nowrap">防御率</span></th>
                <th><span class="nowrap">投球回</span></th>
                <th><span class="nowrap">勝</span></th>
                <th><span class="nowrap">敗</span></th>
                <th><span class="nowrap">勝率</span></th>
                <th><span class="nowrap">失点</span></th>
                <th><span class="nowrap">自責点</span></th>
                <th><span class="nowrap">奪三振</span></th>
                <th><span class="nowrap">被安打</span></th>
                <th><span class="nowrap">被本塁打</span></th>
                <th><span class="nowrap">与四死球</span></th>
              </tr>
            </thead>
            <tbody>
              <tr align="center">
                <td>
                  <% begin %>
                    <% earned_run_average = @user_record.all.sum(:earned_run)*9/@user_record.all.sum(:inning).to_f %>
                    <span class="nowrap"><%= sprintf("%.2f",earned_run_average) %></span>
                  <% rescue %>
                    0
                  <% end %>
                </td>
                <td><span class="nowrap"><%= @user_record.all.sum(:inning) %></span></td>
                <td><span class="nowrap"><%= @user_record.all.sum(:win) %></span></td>
                <td><span class="nowrap"><%= @user_record.all.sum(:lose) %></span></td>
                <td>
                  <% begin %>
                    <% win_rate = @user_record.all.sum(:win)/(@user_record.all.sum(:win)+@user_record.all.sum(:lose)).to_f %>
                    <span class="nowrap"><%= sprintf("%.3f",win_rate) %></span>
                  <% rescue %>
                    0
                  <% end %>
                </td>
                <td><span class="nowrap"><%= @user_record.all.sum(:to_be_point) %></span></td>
                <td><span class="nowrap"><%= @user_record.all.sum(:earned_run) %></span></td>
                <td><span class="nowrap"><%= @user_record.all.sum(:to_be_strike_out) %></span></td>
                <td><span class="nowrap"><%= @user_record.all.sum(:to_be_hit) %></span></td>
                <td><span class="nowrap"><%= @user_record.all.sum(:to_be_homerun) %></span></td>
                <td><span class="nowrap"><%= @user_record.all.sum(:to_be_ball) %></span></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <% if @user == current_user %>
      <div class="new-record">
        <div class="row">
          <div class="mx-auto">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
              記録の追加
            </button>
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">記録の追加</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <!--記録追加のフォーム-->
                  <%= form_with modal:@record, url: records_path, method: :post, local: true do |f| %>
                    <div class="modal-body">
                      <h2>打者記録</h2>
                      <div class="form_group">
                        <%= f.label :打席, class: "col-sm-3" %>
                        <%= f.number_field :bat, value: 0 %>
                      </div>
  　　　　　　         　　　　<div class="form_group">
                        <%= f.label :打数, class: "col-sm-3" %>
                        <%= f.number_field :batting, value: 0 %>
                      </div>
                      <div class="form_group">
                        <%= f.label :安打, class: "col-sm-3 control-label" %>
                        <%= f.number_field :hit, value: 0 %>
                      </div>
                      <div class="form_group">
                        <%= f.label :二塁打, class: "col-sm-3 control-label" %>
                        <%= f.number_field :two_base_hit, value: 0 %>
                      </div>
                      <div class="form_group">
                        <%= f.label :三塁打, class: "col-sm-3 control-label" %>
                        <%= f.number_field :three_base_hit, value: 0 %>
                      </div>
                      <div class="form_group">
                        <%= f.label :本塁打, class: "col-sm-3 control-label" %>
                        <%= f.number_field :homerun, value: 0 %>
                      </div>
                      <div class="form_group">
                        <%= f.label :三振, class: "col-sm-3 control-label" %>
                        <%= f.number_field :strike_out, value: 0 %>
                      </div>
                      <div class="form_group">
                        <%= f.label :四死球, class: "col-sm-3 control-label" %>
                        <%= f.number_field :ball, value: 0 %>
                      </div>
                      <div class="form_group">
                        <%= f.label :犠打, class: "col-sm-3 control-label" %>
                        <%= f.number_field :bunt, value: 0 %>
                      </div>
                      <div class="form_group">
                        <%= f.label :犠飛, class: "col-sm-3 control-label" %>
                        <%= f.number_field :sacrifice_fly, value: 0 %>
                      </div>
                      <div class="form_group">
                        <%= f.label :打点, class: "col-sm-3 control-label" %>
                        <%= f.number_field :dot, value: 0 %>
                      </div>
                      <div class="form_group">
                        <%= f.label :得点, class: "col-sm-3 control-label" %>
                        <%= f.number_field :homein, value: 0 %>
                      </div>
                      <div class="form_group">
                        <%= f.label :盗塁, class: "col-sm-3 control-label" %>
                        <%= f.number_field :still, value: 0 %>
                      </div>
                      <div class="form_group">
                        <%= f.label :失策, class: "col-sm-3 control-label" %>
                        <%= f.number_field :error, value: 0 %>
                      </div>
                      <h2>投手記録</h2>
                      <div class="form_group">
                        <%= f.label :勝, class: "col-sm-3 control-label" %>
                        <%= f.number_field :win, value: 0 %>
                      </div>
                      <div class="form_group">
                        <%= f.label :敗, class: "col-sm-3 control-label" %>
                        <%= f.number_field :lose, value: 0 %>
                      </div>
                      <div class="form_group">
                        <%= f.label :投球回, class: "col-sm-3 control-label" %>
                        <%= f.number_field :inning, value: 0 %>
                      </div>
                      <div class="form_group">
                        <%= f.label :被安打, class: "col-sm-3 control-label" %>
                        <%= f.number_field :to_be_hit, value: 0 %>
                      </div>
                      <div class="form_group">
                        <%= f.label :被本塁打, class: "col-sm-3 control-label" %>
                        <%= f.number_field :to_be_homerun, value: 0 %>
                      </div>
                      <div class="form_group">
                        <%= f.label :奪三振, class: "col-sm-3 control-label" %>
                        <%= f.number_field :to_be_strike_out, value: 0 %>
                      </div>
                      <div class="form_group">
                        <%= f.label :与四死球, class: "col-sm-3 control-label" %>
                        <%= f.number_field :to_be_ball, value: 0 %>
                      </div>
                      <div class="form_group">
                        <%= f.label :失点, class: "col-sm-3 control-label" %>
                        <%= f.number_field :to_be_point, value: 0 %>
                      </div>
                      <div class="form_group">
                        <%= f.label :自責点, class: "col-sm-3 control-label" %>
                        <%= f.number_field :earned_run, value: 0 %>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
                      <%= f.submit "記録を追加する", class: "btn btn-primary" %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
