<div class="body">
  <div class="container mt-5">
    <div class="row">
      <div class="col-xs-12">
        <h2><%= @info.team.teamname %></h2>
        <div class="row">
          <table class="table">
            <thead>
              <tr>
                <th><h4>イベント内容</h4></th>
                <th><h5><%= @info.body %></h5></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><h4>場所</h4></td>
                <td><h5><%= @info.location %></h5></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
      イベントを修正する
    </button>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">イベントを修正する</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= form_with model:@info, url: info_path(@info), method: :patch, local:true do |f| %>
              <div class="form_group">
                <%= f.label :イベント名 %>
                <%= f.text_area :body %>
              </div>
              <div class="form_group">
                <%= f.label :場所 %>
                <%= f.text_field :location %>
              </div>
              <div class="form_group">
                <%= f.label :日時 %>
                <%= f.datetime_select :start_time %>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
                <%= f.submit "イベントを更新する", class: 'btn btn-primary' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
    <input id="address" type="textbox" value="Tyokyo">

    <!-- buttonをクリックしたらcodeAddressを実行　-->
    <input type="button" value="検索" onclick="codeAddress()">
    <div id='map'>
      <script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV["API_KEY"]%>&callback=initMap" async defer></script>
      <script>
        let map
        let geocoder

          function initMap(){
            // geocoderを初期化
            geocoder = new google.maps.Geocoder()

            map = new google.maps.Map(document.getElementById('map'), {
            center: {lat: 34.750, lng: 137.400},
            zoom: 13
            });
          }

          function codeAddress(){
            let inputAddress = document.getElementById('address').value;

            geocoder.geocode( { 'address': inputAddress}, function(results, status) {
              if (status == 'OK') {

                map.setCenter(results[0].geometry.location);

                var marker = new google.maps.Marker({
                    map: map,
                    position: results[0].geometry.location
                });
              } else {
                alert('Geocode was not successful for the following reason: ' + status);
              }
            });
          }
      </script>
    </div>

  </div>
</div>
