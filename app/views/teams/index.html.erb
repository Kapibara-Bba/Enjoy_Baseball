<div class="body">
  <div class="container mt-5">
    <div class="row">
      <div class="mx-auto">
        <h2><%= @team.teamname %></h2>
        <%= month_calendar events: @infos do |date, infos| %>
          <%= date.day %>

          <% infos.each do |info| %>
            <div>
             <%= link_to edit_info_path(@info) do %>
               <%= info.body %>
             <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
