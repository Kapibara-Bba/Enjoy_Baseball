<!DOCTYPE html>
<html>
  <head>
    <title>BaseballScore</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/7b4ac370e3.js" crossorigin="anonymous"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <header class="navbar navbar-inverse p-5">
        <div class="container">
          <nav class="nav navbar-nav navbar-left" style="color: white">
            <span class="header-title">Besescore</span>
          </nav>
          <nav class="nav navbar-nav navbar-right navbar-expand-lg">
            <div id="slidemenu">
              <ul class="">
                <li class="nav-item">
                  <%= link_to users_path do %>
                    <i class="glyphicon glyphicon-home" aria-hidden="true"></i> 試合一覧
                  <% end %>
                </li>
                <% if current_user.team_id.present? %>
                <li class="nav-item">
                  <%= link_to team_path(current_user.team_id) do %>
                    <i class="glyphicon glyphicon-home" aria-hidden="true"></i> マイチーム
                  <% end %>
                </li>
                <% end %>
                <li class="nav-item">
                  <%= link_to user_path(current_user) do %>
                    <i class="glyphicon glyphicon-home" aria-hidden="true"></i> マイページ
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to records_batter_path do %>
                    <i class="glyphicon glyphicon-home" aria-hidden="true"></i> 打者成績
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to records_pitch_path do %>
                    <i class="glyphicon glyphicon-home" aria-hidden="true"></i> 投手成績
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <i class="glyphicon glyphicon-home" aria-hidden="true"></i> ログアウト
                  <% end %>
                </li>
              </ul>
            </div>
          </nav>
        </div>
      </header>
      <% if flash[:notice] %>
        <div class="notification is-info">
          <p class="notice"><%= notice %></p>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div class="notification is-danger">
          <p class="alert"><%= alert %></p>
        </div>
      <% end %>
    <% end %>

    <%= yield %>
  </body>
</html>
