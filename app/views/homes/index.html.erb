<div class="container">
  <div class="row">
    <div class="home-about">
      <%= link_to "What About EnjoyBaseball!?", homes_about_path, data: {"turbolinks" => false}, class: 'btn btn-primary w-100 home-about-button' %>
    </div>
  </div>
  <div class="row home">
    <div class="mx-auto home-main">
      <div class=""></div>
      <div class="row login-button">
        <div class="login-ball-button">
          <%= link_to new_user_session_path, data: {"turbolinks" => false} do %>
            <i class="fas fa-baseball-ball"></i>
            <p class="login-ball-text">ログイン</p>
          <% end %>
        </div>
        <div class="login-ball-button">
          <%= link_to new_user_registration_path, data: {"turbolinks" => false} do %>
            <i class="fas fa-baseball-ball"></i>
            <p class="login-ball-text">新規登録</p>
          <% end %>
        </div>
        <div class="login-ball-button">
          <%= link_to users_guest_sign_in_path, data: {"turbolinks" => false}, method: :post do %>
            <i class="fas fa-baseball-ball"></i>
            <p class="guest-login-text">ゲストログイン</p>
          <% end %>
        </div>
        <p class="login-message">※ポートフォリオ用の為、通常はログイン又は、新規登録からお入りください</p>
      </div>
    </div>
  </div>
</div>
