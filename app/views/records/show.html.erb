<div class="body">
  <div class="container mt-5 flame">
    <div class="row">
      <div class="col-xs-6 user-show-profile">
        <%= attachment_image_tag @user, :image, fallback: "no_image.jpg", format: 'jpeg', size:'200x200', class: 'profile-image' %>
      </div>
      <div class="col-xs-6 user-name"><%= @user.name %>
        <%= link_to team_path(@user.team), data: {"turbolinks" => false} do %>
          <p class="profile-font"><%= @user.team.teamname %></p>
        <% end %>
        <div class="row">
          <div class="profile-font"><%= @user.throw %> <%= @user.position %>
            <% if @user == current_user %>
              <%= link_to "プロフィール編集", edit_user_path(current_user), data: {"turbolinks" => false}, class: "col-xs-12 btn btn-success" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="game-info">
      <p class="game-days"><%= @record.days %></p>
      <p class="user-opponent">対 <b><%= @record.opponent %></b></p>
      <p class="user-record-score">
        <%= @user.team.teamname %><%= @record.team_score %> ー <%= @record.rival_score %><%= @record.opponent %>
      </p>
    </div>
    <!--打撃成績の表示-->
    <h2>打撃成績</h2>
    <div class="row">
      <div style="height:100%; width:100%; overflow-y:scroll; scrollbar-base-color:#99ff66 ; scrollbar-arrow-color:#ff0000;">
        <table  class="table table-hover table-inverse" width="100%" style="table-layout: auto; background-color: #FFFFCC">
          <thead>
            <tr align="center">
              <th><span class="nowrap">打席</span></th>
              <th><span class="nowrap">打数</span></th>
              <th><span class="nowrap">安打</span></th>
              <th><span class="nowrap">本塁打</span></th>
              <th><span class="nowrap">二塁打</span></th>
              <th><span class="nowrap">三塁打</span></th>
              <th><span class="nowrap">打点</span></th>
              <th><span class="nowrap">得点</span></th>
              <th><span class="nowrap">三振</span></th>
              <th><span class="nowrap">四死球</span></th>
              <th><span class="nowrap">犠打</span></th>
              <th><span class="nowrap">犠飛</span></th>
              <th><span class="nowrap">盗塁</span></th>
              <th><span class="nowrap">失策</span></th>
            </tr>
          </thead>
          <tr align="center">
            <td><span class="nowrap"><%= @record.bat %></span></td>
            <td><span class="nowrap"><%= @record.batting %></span></td>
            <td><span class="nowrap"><%= @record.hit %></span></td>
            <td><span class="nowrap"><%= @record.homerun %></span></td>
            <td><span class="nowrap"><%= @record.two_base_hit %></span></td>
            <td><span class="nowrap"><%= @record.three_base_hit %></span></td>
            <td><span class="nowrap"><%= @record.dot %></span></td>
            <td><span class="nowrap"><%= @record.homein %></span></td>
            <td><span class="nowrap"><%= @record.strike_out %></span></td>
            <td><span class="nowrap"><%= @record.ball %></span></td>
            <td><span class="nowrap"><%= @record.bunt %></span></td>
            <td><span class="nowrap"><%= @record.sacrifice_fly %></span></td>
            <td><span class="nowrap"><%= @record.still %></span></td>
            <td><span class="nowrap"><%= @record.error %></span></td>
          </tr>
        </table>
      </div>
    </div>
    <!--投手成績の表示-->
    <h2>投手成績</h2>
    <div class="row">
      <div style="height:100%; width:100%; overflow-y:scroll; scrollbar-base-color:#99ff66 ; scrollbar-arrow-color:#ff0000;">
        <table class="table table-hover table-inverse" width="100%" style="table-layout: auto; background-color: #FFDDFF;">
          <thead>
            <tr align="center">
              <th><span class="nowrap">投球回</span></th>
              <th><span class="nowrap">勝</span></th>
              <th><span class="nowrap">敗</span></th>
              <th><span class="nowrap">失点</span></th>
              <th><span class="nowrap">自責点</span></th>
              <th><span class="nowrap">奪三振</span></th>
              <th><span class="nowrap">被安打</span></th>
              <th><span class="nowrap">被本塁打</span></th>
              <th><span class="nowrap">与四死球</span></th>
            </tr>
          </thead>
          <tr align="center">
            <td><span class="nowrap"><%= @record.inning %></span></td>
            <td><span class="nowrap"><%= @record.win %></span></td>
            <td><span class="nowrap"><%= @record.lose %></span></td>
            <td><span class="nowrap"><%= @record.to_be_point %></span></td>
            <td><span class="nowrap"><%= @record.earned_run %></span></td>
            <td><span class="nowrap"><%= @record.to_be_strike_out %></span></td>
            <td><span class="nowrap"><%= @record.to_be_hit %></span></td>
            <td><span class="nowrap"><%= @record.to_be_homerun %></span></td>
            <td><span class="nowrap"><%= @record.to_be_ball %></span></td>
          </tr>
        </table>
      </div>
    </div>
    <% if @user == current_user %>
      <%= link_to "成績の編集・メモの追加", edit_record_path(@record), data: {"turbolinks" => false}, class: "col-xs-12 btn btn-success" %>
    <% end %>
  </div>
</div>
